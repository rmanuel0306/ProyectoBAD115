    <mapping resource="com/sistcontable/model/DetalleEstado.hbm.xml"/>
    <mapping resource="com/sistcontable/model/Transaccion.hbm.xml"/>
    <mapping resource="com/sistcontable/model/Estado.hbm.xml"/>
    <mapping resource="com/sistcontable/model/Municipio.hbm.xml"/>
    <mapping resource="com/sistcontable/model/Empresa.hbm.xml"/>
    <mapping resource="com/sistcontable/model/Rubro.hbm.xml"/>
    <mapping resource="com/sistcontable/model/Usuario.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
